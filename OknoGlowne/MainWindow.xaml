<Window x:Class="OknoGlowne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OknoGlowne"
        mc:Ignorable="d"
        Title="Okno główne" Height="370" Width="850">
    <Grid>
        <Button Name="ButtonUtworzNowaUmowe" Content="Utwórz nową umowę" HorizontalAlignment="Left" Margin="305,153,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonUtworzNowaUmowe_Click"/>
        <Button Name="ButtonDodajNowegoKlienta" Content="Dodaj nowego klienta" HorizontalAlignment="Left" Margin="43,121,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonDodajNowegoKlienta_Click"/>
        <Button Name="ButtonDodajNieruchomosc" Content="Dodaj  nieruchomość" HorizontalAlignment="Left" Margin="43,184,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonDodajNieruchomosc_Click"/>
        <Button Name="ButtonDodajPracownika" Content="Dodaj pracownika" HorizontalAlignment="Left" Margin="43,248,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonDodajPracownika_Click"/>
        <Button Name="ButtonWyswietlOferty" Content="Wyświetl utworzone oferty" HorizontalAlignment="Left" Margin="565,248,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonWyswietlOferty_Click"/>
        <Button Name="ButtonPrzegladajListeNieruchomosci" Content="Przeglądaj listę nieruchomości" HorizontalAlignment="Left" Margin="565,56,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonPrzegladajListeNieruchomosci_Click"/>
        <Button Name="ButtonPrzegladajListeKlientow" Content="Przeglądaj listę klientów" HorizontalAlignment="Left" Margin="565,121,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonPrzegladajListeKlientow_Click"/>
        <Button Name="ButtonPrzegladajListePracownikow" Content="Przeglądaj listę pracowników" HorizontalAlignment="Left" Margin="565,184,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonPrzegladajListePracownikow_Click"/>
        <Button Name="ButtonDodajOferte" Content="Dodaj ofertę" HorizontalAlignment="Left" Margin="43,56,0,0" VerticalAlignment="Top" Width="231" Height="40" Click="ButtonDodajOferte_Click"/>

    </Grid>
</Window>
